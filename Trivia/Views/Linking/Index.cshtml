@using System.Collections.Generic
@model List<Trivia.Models.Question>

@{
    ViewData["Title"] = "Linking";
}
<h1>Linking</h1>
<div>
    <h4>All Questions and Answers</h4>
    <hr />

    @foreach (var question in Model)
    {
        <ul>
            <li>
                <span class="font-weight-bold">@question.Text</span>
                <a asp-controller="Questions"  asp-action="Edit" asp-route-id="@question.Id">Edit</a> |
                <a asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id">Delete</a>
                <ul>
                    @foreach (var answer in question.Answers)
                    {
                    <li>
                        @if (answer.IsRightAnswer)
                        {
                        <span class="font-italic">@answer.Text</span>
                        }
                        else
                        {
                        <span>@answer.Text</span>
                        }
                        <a asp-controller="Answers" asp-action="Edit" asp-route-id="@answer.Id">Edit</a> |
                        <a asp-controller="Answers" asp-action="Delete" asp-route-id="@answer.Id">Delete</a>
                    </li>
                    }
                </ul>
            </li>
        </ul>
    }
</div>

